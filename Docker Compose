version: '3.8'

services:
  # Relay Server (Node.js) - O "CÃ©rebro" do CoupleShare e GalaxyHackKit
  relay:
    image: node:20-alpine
    container_name: tonacorp-relay
    working_dir: /app
    volumes:
      - ./server:/app
    command: sh -c "npm install ws && node relay.js"
    restart: always
    environment:
      - NODE_ENV=production
      - PORT=8080
    networks:
      - tonacorp_net

  # Nginx - Proxy Reverso com Hardening e SSL
  nginx:
    image: nginx:stable-alpine
    container_name: tonacorp-proxy
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./certs:/etc/letsencrypt:ro
    depends_on:
      - relay
    networks:
      - tonacorp_net

networks:
  tonacorp_net:
    driver: bridge
